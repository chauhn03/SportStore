@model SportsStore.Domain.Entities.Product

@{
    ViewBag.Title = "Admin: Edit" + @Model.Name;
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @*@Html.EditorForModel()*@
 
    <div class="editor-label">@Html.DisplayNameFor(model => model.Name)</div>
    <div class="editor-field">@Html.EditorFor(model => model.Name)</div>
    
    <div class="editor-label">@Html.DisplayNameFor(model => model.Description)</div>
    <div class="editor-field">@Html.EditorFor(model => model.Description)</div>
    
    <div class="editor-label">@Html.DisplayNameFor(model => model.Price)</div>
    <div class="editor-field">@Html.EditorFor(model => model.Price)</div>
    
    <div class="editor-label">Image</div>
    <div class="editor-field">
        @if (Model.ImageData == null)
        {
            @:None
	    }
        else
        {
            <img width="150" height="150" src="@Url.Action("GetImage", "Product", new { Model.ProductId })" />            
        }

        <div>Upload new image:
            <input type="file" name="Image" /></div>
        <input type="submit" value="Save" />
        @Html.ActionLink("Cancel and return to List", "Index")
    </div>
}
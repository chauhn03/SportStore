@using SportsStore.WebUI.Models;
@using SportsStore.WebUI.HtmlHelpers;
@using SportsStore.Domain.Entities;

@model ProductListViewModel

@{
    ViewBag.Title = "Products";
}

@foreach (ProductViewModel productViewModel in this.Model.ProductViewModels)
{
    Html.RenderPartial("ProductSummary", productViewModel.Product);
}

<div>
    @Html.PageLinks(@Model.PagingInfo, x => Url.Action("List", new { page = x, categoryId = @Model.CurrentCategory }))
</div>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/bluewhale-admin/css")    
    @*<link href="~/Content/bluewhale-admin/css/table/demo_page.css" rel="stylesheet" type="text/css" />*@

    @*Admin scripts*@
    @*<script src="~/Content/admin/js/jquery-1.6.4.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
   @* <script src="~/Content/admin/js/jquery-ui/jquery.ui.core.min.js"></script>
    <script src="~/Content/admin/js/jquery-ui/jquery.ui.widget.min.js"></script>
    <script src="~/Content/admin/js/jquery-ui/jquery.ui.accordion.min.js"></script>

    <script src="~/Content/admin/js/jquery-ui/jquery.effects.core.min.js"></script>
    <script src="~/Content/admin/js/jquery-ui/jquery.effects.slide.min.js"></script>
    <script src="~/Content/admin/js/jquery-ui/jquery.ui.mouse.min.js"></script>
    <script src="~/Content/admin/js/jquery-ui/jquery.ui.sortable.min.js"></script>*@
</head>
<body>
    <div class="container_12">
        <div class="grid_12 header-repeat">
            <div id="branding">
                <div class="floatleft">
                    <img src="img/logo.png" alt="Logo" />
                </div>
                <div class="floatright">
                    <div class="floatleft">
                        <img src="img/img-profile.jpg" alt="Profile Pic" />
                    </div>
                    <div class="floatleft marginleft10">
                        <ul class="inline-ul floatleft">
                            <li>Hello Admin</li>
                            <li><a href="#">Account</a></li>
                            <li><a href="#">Logout</a></li>
                        </ul>
                        <br />
                        <span class="small grey">Last Login: 3 hours ago</span>
                    </div>
                </div>
                <div class="clear">
                </div>
            </div>
        </div>
        <div class="clear">
        </div>
        <div>
            <ul class="nav main">
                <li class="ic-dashboard"><a href="dashboard.html"><span>Giao Diện</span></a> </li>
                <li class="ic-grid-tables"><a href="javascript:"><span>Sản Phẩm</span></a>
                    <ul>
                        <li><a href="form-controls.html">Nhóm Sản Phẩm</a> </li>
                        <li><a href="@Url.Action("Index", "Products")">Sản Phẩm</a> </li>
                        <li><a href="@Url.Action("CreateCategory", "Products")">Tạo Nhóm</a> </li>
                        <li><a href="@Url.Action("Create", "Products")">Tạo Sản Phẩm</a> </li>
                    </ul>
                </li>
                <li class="ic-form-style"><a href="typography.html"><span>Tin Tức</span></a></li>
                <li class="ic-charts"><a href="charts.html"><span>Cài Đặt</span></a></li>
                @*<li class="ic-grid-tables"><a href="table.html"><span>Data Table</span></a></li>*@
                <li class="ic-gallery dd"><a href="javascript:"><span>Quản Lý Tập Tin</span></a>
                    <ul>
                        <li><a href="image-gallery.html">Pretty Photo</a> </li>
                        <li><a href="gallery-with-filter.html">Gallery with Filter</a> </li>
                    </ul>
                </li>
                <li class="ic-notifications"><a href="notifications.html"><span>Tin Nhắn</span></a></li>

            </ul>
        </div>
        <div class="clear">
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
    <div class="clear">
    </div>
    <div id="site_info">
        <p>
            Copyright <a href="#">BlueWhale Admin</a>. All Rights Reserved.
        </p>
    </div>

@*    @Scripts.Render("~/bundles/bluewhale_admin_jquery")
    @Scripts.Render("~/bundles/bluewhale_admin_jquery_ui")*@    
</body>
</html>
